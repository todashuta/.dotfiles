[color]
	ui = true
[commit]
	verbose = true  # always `git commit -v'
[log]
	showSignature = true
[alias]
	s = status -uno --show-stash
	ss = status -sb --show-stash
	ap = add --patch
	b = branch -vv
	d  = diff
	df = diff HEAD..FETCH_HEAD
	dfs = diff HEAD..FETCH_HEAD --stat
	dw = diff --color-words
	fp = fetch -p
	l  = log --graph --stat --decorate --date=format-local:'%Y-%m-%d (%a) %H:%M:%S'
	la = log --graph --stat --decorate --date=format-local:'%Y-%m-%d (%a) %H:%M:%S' --all
	ll  = log --graph --patch --decorate --date=format-local:'%Y-%m-%d (%a) %H:%M:%S'
	lla = log --graph --patch --decorate --date=format-local:'%Y-%m-%d (%a) %H:%M:%S' --all
	lg = log --graph --pretty=format:'%C(yellow)%h%C(reset) -%C(auto)%d%C(reset) %s %C(green)(%cr) %C(bold blue)<%an>%C(reset)' --abbrev-commit --date=relative
	lga = log --graph --all --pretty=format:'%C(yellow)%h%C(reset) -%C(auto)%d%C(reset) %s %C(green)(%cr) %C(bold blue)<%an>%C(reset)' --abbrev-commit --date=relative
	lf = log HEAD..FETCH_HEAD
	summary = status -s -u -b
	contributors = shortlog -s -n
	#wdiff = diff --word-diff
	unstage = reset HEAD --
	precommit = diff --staged
	branches = branch -a -vv
	tags = tag
	stashes = stash list
	remotes = remote -v
	amend = commit --amend
	discard = checkout --
[core]
	editor = vim
	#pager = less -R -S --shift 5 -M -X -g -j10 # -W
	pager = delta --features=my_delta_unified
	#pager = delta --features=my_delta_side_by_side
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
	keepBackup = false
[diff]
	algorithm = histogram
	colorMoved = dimmed_zebra

[blame]
	#ignoreRevsFile = .git-blame-ignore-revs

[init]
	defaultBranch = main
[push]
	default = simple
[pull]
	rebase = true
[fetch]
	#prune = true  # always `git fetch --prune'

[delta]
	pager = less -R -S --shift 5 -M -X -g -j10 # -W
	diff-highlight = true
	zero-style = dim
	#navigate = true
[delta "my_delta_unified"]
	line-numbers = true
	#line-numbers-left-format  = "{nm:^4}|"
	#line-numbers-right-format = "{np:^4}|"
[delta "my_delta_side_by_side"]
	side-by-side = true
	#line-numbers-left-format  = "|{nm:^4}|"
	#line-numbers-right-format = "|{np:^4}|"
	#wrap-max-lines = 0

[credential]
	# ユーザーのgitconfigでグローバル設定を上書きする場合は1つ目に空白エントリ `helper =` が必須
	# 参考: https://aka.ms/gcm/rename
	#helper =
	#helper = manager
	#helper = P:/scoop/apps/git/current/mingw64/bin/git-credential-manager.exe
[credential "https://github.com"]
	#helper =
	#helper = !/path/to/gh auth git-credential  # gh: GitHub CLI
[credential "https://gist.github.com"]
	#helper =
	#helper = !/path/to/gh auth git-credential

# end of gitconfig
