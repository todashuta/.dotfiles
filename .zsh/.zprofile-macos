# .zprofile for macOS

if [ -x /usr/libexec/path_helper ]; then
	eval `PATH= MANPATH= /usr/libexec/path_helper -s`
fi

typeset -gx -U path PATH
typeset -gx -U manpath MANPATH

# macports
path=(/opt/local/bin /opt/local/sbin $path)
manpath=(/opt/local/share/man $manpath)

# golang
path=($path ~/go/bin)

# my tools
path=($path ~/bin)

# MacVim
path=($path /Applications/MacVim.app/Contents/bin)

# Ghostty
path=($path /Applications/Ghostty.app/Contents/MacOS)
manpath=($manpath /Applications/Ghostty.app/Contents/Resources/man)

# Homebrew
#export HOMEBREW_PREFIX="/opt/homebrew";
#export HOMEBREW_CELLAR="/opt/homebrew/Cellar";
#export HOMEBREW_REPOSITORY="/opt/homebrew";
#export PATH="/opt/homebrew/bin:/opt/homebrew/sbin${PATH+:$PATH}";
#export MANPATH="/opt/homebrew/share/man${MANPATH+:$MANPATH}:";
#export INFOPATH="/opt/homebrew/share/info:${INFOPATH:-}";

# vim: set ft=zsh:
# .zprofile ends here
